<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button_Style" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <!--        <item name="android:background" >@color/green</item>-->
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AlertInputCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:layout">@layout/activity_main</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:inputType">numberPassword</item>
    </style>

